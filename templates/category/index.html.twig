{% extends 'base.html.twig' %}

{% block title %}Hello CategoryController!{% endblock %}

{% block body %}

    <div class="px-4 pt-4 mt-4 text-center">
        <h1 class="display-5 fw-bold">Les categories </h1>
        <div class="col-lg-6 mx-auto">
            <p class="lead mb-4">
                Bienvenue sur la page catégories ! Vous trouverez ici toutes les catégories dess différentes séries
                que l'on peut trouver !
            </p>
            <div class="d-grid gap-2 d-sm-flex justify-content-sm-center">
            </div>
        </div>
    </div>

    <div class="modal-dialog" role="document">
        <div class="modal-content rounded-4 shadow">
            {% for category in categorys %}
            <div class="modal-footer flex-column border-top-0">
                <a href="{{ path("category_show", { categoryName: category.name }) }}" type="button" class="btn btn-lg
                btn-primary
                w-100
                mx-0
                mb-2">{{
                    category.name
                    }}</a>

            </div>
            {% endfor %}

        </div>
    </div>

{% endblock %}
