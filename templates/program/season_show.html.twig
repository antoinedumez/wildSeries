{% extends 'base.html.twig' %}

{% block title %}Série #{{ program.id }}{% endblock %}

{% block body %}



        <div class="container col-xxl-8 px-4 py-5">
            <div class="row flex-lg-row-reverse align-items-center g-5 py-5">
                <div class="col-10 col-sm-8 col-lg-6">
                    <img src="{{program.poster}}" class="d-block mx-lg-auto img-fluid" alt="Bootstrap Themes" width="700" height="500" loading="lazy">
                </div>
                <div class="col-lg-6">
                    <h1 class="display-5 fw-bold lh-1 mb-3">{{ program.title }}</h1>
                    <p class="lead">{{ program.synopsis }}</p>
                </div>
            </div>
        </div>


        <div class="modal-dialog" role="document">
        <div class="modal-content rounded-4 shadow">
            {% for episode in season.episodes %}
                <div class="modal-footer flex-column border-top-0">
                   <h1> {{ episode.title}} </h1>
                    <p> Episode n° {{ episode.number }} :</p>
                    <p> {{ episode.synopsys }} </p>
                </div>
            {% endfor %}

        </div>
        </div>



    {% for episode in season.episodes %}
        {{ dump(episode) }}
    {% endfor %}


{{ dump(season) }}
{{ dump(program) }}

{% endblock %}